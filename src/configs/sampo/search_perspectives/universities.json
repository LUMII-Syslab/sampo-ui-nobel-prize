{
    "id": "universities",
    "endpoint": {
        "url": "https://data.nobelprize.org/store/sparql",
        "useAuth": false,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesPerspective3.js",
    "baseURI": "http://data.nobelprize.org/resource/university/",
    "URITemplate": "<BASE_URI><LOCAL_ID>",
    "facetClass": "dbo:University",
    "frontPageImage": "main_page/works-452x262.jpg",
    "searchMode": "faceted-search",
    "enableDynamicLanguageChange": false,
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "universities": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "workProperties",
                "pagesize": 10
            },
            "instanceConfig": {
                "propertiesQueryBlock": "workProperties",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    },
                    "universityAffiliationsNetwork":{
                        "tabID": 1,
                        "component": "Network",
                        "tabPath": "network",
                        "tabIcon": "BubbleChart",
                        "resultMapper":"mapManualNetwork",
                        "pageType":"instancePage",
                        "sparqlQuery": "nobelPrizeSharedBetweenUniversitiesQuery",
                        "postprocess": {
                            "func": "copyToField",
                            "config": {
                                "field": "elements"
                            }
                        },
                        "facetClass": "universities",
                        "style": [
                            {
                                "selector": "node",
                                "style": {
                                    "shape": "ellipse",
                                    "label": "data(prefLabel)"
                                }
                            },
                            {
                            "selector": "edge",
                                "style": {
                                    "curve-style": "bezier",
                                    "target-arrow-color": "#999",
                                    "color": "#555",
                                    "font-size": "6",
                                    "source-arrow-shape":"triangle",
                                    "target-arrow-shape":"triangle",
                                    "text-valign": "top",
                                    "text-halign": "center",
                                    "edge-text-rotation": "autorotate",
                                    "text-background-opacity": 1,
                                    "text-background-color": "white",
                                    "text-background-shape": "roundrectangle",
                                    "width": "data(weight)",
                                    "content": "data(prefLabel)"
                                }
                            }
                        ],
                        "layout": {
                            "name": "cose",
                            "idealEdgeLength": 100,
                            "nodeOverlap": 20,
                            "refresh": 20,
                            "fit": true,
                            "padding": 30,
                            "randomize": false,
                            "componentSpacing": 100,
                            "nodeRepulsion": 400000,
                            "edgeElasticity": 100,
                            "nestingFactor": 5,
                            "gravity": 80,
                            "numIter": 1347,
                            "initialTemp": 200,
                            "coolingFactor": 0.95,
                            "minTemp": 1
                        }
                    },
                    "instancePageExport": {
                        "tabID": 2,
                        "component": "Export",
                        "tabPath": "export",
                        "tabIcon": "CloudDownload",
                        "pageType": "instancePage"
                    }
                }
            }
        },
        "laureatesCountPerUniversity":{
            "tabID": 1,
            "component": "ApexCharts",
            "tabPath": "laureates_per_university",
            "tabIcon": "ShowChart",
            "sparqlQuery": "laureatesByAffiliatedUniversityQuery",
            "facetClass": "universities",
            "resultMapper":"mapPieChart",
            "createChartData": "createApexBarChartData",
            "title": "Number of laureate awards per affiliation (top 15)",
            "seriesTitle": "Affiliated laureate awards",
            "xaxisTitle": "University",
            "yaxisTitle": "Affiliated laureate awards"
        },
        "export": {
            "tabID": 2,
            "component": "Export",
            "tabPath": "export",
            "tabIcon": "CloudDownload",
            "resultClass": "perspective2",
            "facetClass": "perspective2"
        },
        "knowledgeGraphMetadata": {
            "sparqlQuery": "knowledgeGraphMetadataQuery",
            "resultMapper": "makeObjectList"
        }
    },
    "properties": [
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 200
        },
        {
            "id": "country",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 100
        },
        {
            "id": "city",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 100
        },
        {
            "id": "affiliatedLaureate",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 250
        },
        {
            "id": "mostAwardsInCategory",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 100
        }
    ],
    "facets": {
        "prefLabel": {
            "sortByPredicate": "rdfs:label",
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "textQueryProvider": "regex",
            "textQueryProperty": "rdfs:label"
        },
        "country": {
            "sortByPredicate": "dbo:country/rdfs:label",
            "sortByValueFilter": "FILTER(LANG(?orderBy)='en')"
        },
        "city": {
            "sortByPredicate": "dbo:city/rdfs:label",
            "sortByValueFilter": "FILTER(LANG(?orderBy)='en')"
        }
    }
}